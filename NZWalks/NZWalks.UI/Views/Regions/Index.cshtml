@model IEnumerable< NZWalks.UI.Models.DTO.RegionDTO>
@{
}<h1 class="mt-3">Regions</h1>
<div class="mb-3">
    <a asp-controller="Regions" asp-action="Add" class="btn btn-primary">Add New Region</a>
    </div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Code</th>
            <th>Name</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var region in Model)
        {
            <tr>
                <td>@region.Id</td>
                <td>@region.Code</td>
                <td>@region.Name</td>
                <td>
                    <a asp-controller="Regions" asp-action="Edit" class="btn btn-light" asp-route-id="@region.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>


